{

    "manifest_version": 2,

    "name": "BuzzwordReader",

    "version": "0.0.1",

    "description": "网络流行语百科",

    "icons":
    {
        "16": "img/logo-black.png"
    },

    "permissions": [
        "*://116.57.53.135/*"
    ],

    "background":
    {
        "scripts": ["js/jquery-3.2.1.min.js", "background-scripts/background-script.js"],
        "persistent": false
    },

    "browser_action":
    {
        "default_icon": "img/logo-black.png",
        "default_title": "欢迎使用BuzzwordReader",
        "default_popup": "popup/login.html"
    },

    "content_scripts":
    [
      {
        "matches": ["http://*/*", "https://*/*"],
        "js": ["js/jquery-3.2.1.min.js", "content-scripts/content-script.js"],
        "css": ["css/content-css.css"]
      }
    ]
}
